{% block publisher_form %}
<style>
  .form-layout {
    margin: 2rem 0;
  }

</style>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="form-wrapper">
                {{ form_start(form, {
                    'id': 'form-add-publisher',
                    'action': path('publisher_index'),
                    'method': 'POST',
                    'multipart': true
                }) }}
                {% if form_errors(form)|length > 0 %}
                    {{ form_errors(form) }}
                {% endif %}
                {{ form_row(form.address) }}
                {{ form_row(form.number) }}
                {% if form.url is defined %}
                    {{ form_row(form.url) }}
                {% endif %}
                <div class="form-row">
                    <button class="btn btn-primary" type="submit">save</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
